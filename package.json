{
  "name": "freezly",
  "version": "1.0.0",
  "description": "Small utility for deeply freezing objects in JavaScript.",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "nodely -s ./src -o ./lib -n 1 # && npm run gen-types",
    "gen-types": "flow gen-flow-files src --out-dir lib",
    "postpublish": "codecov",
    "prepublishOnly": "npm run build",
    "test": "lintly src && flow && jest"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/dogma-io/freezly.git"
  },
  "keywords": [
    "data",
    "freeze",
    "functional",
    "immutable",
    "immutability",
    "object",
    "stateless"
  ],
  "author": "Matthew Dahl <https://github.com/dogma-io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dogma-io/freezly/issues"
  },
  "homepage": "https://github.com/dogma-io/freezly#readme",
  "devDependencies": {
    "babel-core": "^7.0.0-0",
    "babel-jest": "22.4.3",
    "codecov": "3.0.1",
    "jest": "22.4.3",
    "lintly": "0.1.3",
    "nodely": "0.1.4"
  },
  "engines": {
    "node": ">= 6"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageReporters": [
      "json-summary",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "testRegex": "/__tests__/.*-test\\.js$"
  }
}
